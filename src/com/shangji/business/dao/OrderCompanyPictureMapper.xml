<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shangji.business.dao.OrderCompanyPictureMapper" >
    <!-- Result Map-->
    <resultMap id="BaseResultMap" type="com.shangji.business.entity.OrderCompanyPicture" >
        <result column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="company_picture_url" property="companyPictureUrl"/>
    </resultMap>
    
    <!-- sj_order_company_picture table all fields -->
    <sql id="Base_Column_List" >
        id,order_id,company_picture_url
    </sql>

    <!-- 插入记录 -->
    <insert id="add" parameterType="Object" >
        insert into sj_order_company_picture
        (id,order_id,company_picture_url)
        values
        (#{id},#{orderId},#{companyPictureUrl})
    </insert>

    <!-- 根据id，修改记录-->
    <update id="update" parameterType="Object" >
        update sj_order_company_picture 
        set 
            id=#{id},
            order_id=#{orderId},
            company_picture_url=#{companyPictureUrl}
        where id=#{id}
    </update>

    <!-- 删除记录 -->
    <delete id="delete" parameterType="Object">
        delete from sj_order_company_picture where id = #{id}
    </delete>
    
    <!-- 根据id查询  -->
    <select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
        select <include refid="Base_Column_List" />
        from sj_order_company_picture where id = #{id}
    </select>

    <!-- 查询列表无分页 -->
    <select id="queryList" resultMap="BaseResultMap"  parameterType="Object">
        select
        <include refid="Base_Column_List"/>
        from sj_order_company_picture
        where 1=1
        <if test="id != null and id != ''" >
            and id = #{id}
        </if>
        <if test="orderId != null and orderId != ''" >
            and order_id = #{orderId}
        </if>
        <if test="companyPictureUrl != null and companyPictureUrl != ''" >
            and company_picture_url = #{companyPictureUrl}
        </if>
    </select>
    
    <!-- 查询列表 带分页 -->
    <select id="queryListForPage" resultMap="BaseResultMap"  parameterType="Object">
        select
        <include refid="Base_Column_List"/>
        from sj_order_company_picture
        where 1=1
        <if test="id != null and id != ''" >
            and id = #{id}
        </if>
        <if test="orderId != null and orderId != ''" >
            and order_id = #{orderId}
        </if>
        <if test="companyPictureUrl != null and companyPictureUrl != ''" >
            and company_picture_url = #{companyPictureUrl}
        </if>
    </select>

</mapper>   