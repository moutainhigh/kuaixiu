<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kuaixiu.business.dao.UserRoleMapper" >
    <!-- Result Map-->
    <resultMap id="BaseResultMap" type="com.shangji.user.entity.UserRole" >
        <result column="id" property="id"/>
        <result column="login_id" property="loginId"/>
        <result column="role_id" property="roleId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>
    
    <!-- sj_user_role table all fields -->
    <sql id="Base_Column_List" >
        id,login_id,role_id,date_format(`create_time`,'%Y-%m-%d %H:%i:%s')create_time
    </sql>

    <!-- 插入记录 -->
    <insert id="add" parameterType="Object" >
        insert into sj_user_role
        (id,login_id,role_id,create_time)
        values
        (#{id},#{loginId},#{roleId},#{createTime})
    </insert>

    <!-- 根据id，修改记录-->
    <update id="update" parameterType="Object" >
        update sj_user_role 
        set 
            id=#{id},
            login_id=#{loginId},
            role_id=#{roleId},
            create_time=#{createTime}
        where id=#{id}
    </update>

    <!-- 删除记录 -->
    <delete id="delete" parameterType="Object">
        delete from sj_user_role where id = #{id}
    </delete>
    
    <!-- 根据id查询  -->
    <select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
        select <include refid="Base_Column_List" />
        from sj_user_role where id = #{id}
    </select>

    <!-- 查询列表无分页 -->
    <select id="queryList" resultMap="BaseResultMap"  parameterType="Object">
        select
        <include refid="Base_Column_List"/>
        from sj_user_role
        where 1=1
        <if test="id != null and id != ''" >
            and id = #{id}
        </if>
        <if test="loginId != null and loginId != ''" >
            and login_id = #{loginId}
        </if>
        <if test="roleId != null and roleId != ''" >
            and role_id = #{roleId}
        </if>
        <if test="createTime != null and createTime != ''" >
            and create_time = #{createTime}
        </if>
    </select>
    
    <!-- 查询列表 带分页 -->
    <select id="queryListForPage" resultMap="BaseResultMap"  parameterType="Object">
        select
        <include refid="Base_Column_List"/>
        from sj_user_role
        where 1=1
        <if test="id != null and id != ''" >
            and id = #{id}
        </if>
        <if test="loginId != null and loginId != ''" >
            and login_id = #{loginId}
        </if>
        <if test="roleId != null and roleId != ''" >
            and role_id = #{roleId}
        </if>
        <if test="createTime != null and createTime != ''" >
            and create_time = #{createTime}
        </if>
    </select>

</mapper>   