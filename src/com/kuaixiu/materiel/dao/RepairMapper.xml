<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kuaixiu.materiel.dao.RepairMapper" >
    <!-- Result Map-->
    <resultMap id="BaseResultMap" type="com.kuaixiu.materiel.entity.Repair" >
        <result column="id" property="id"/>
        <result column="process_no" property="processNo"/>
        <result column="repair_degree" property="repairDegree"/>
        <result column="receive_time" property="receiveTime"/>
        <result column="repair_time" property="repairTime"/>
        <result column="create_time" property="createTime"/>
    </resultMap>
    
    <!-- lc_repair table all fields -->
    <sql id="Base_Column_List" >
        id,process_no,repair_degree,date_format(`receive_time`,'%Y-%m-%d %H:%i:%s')receive_time,date_format(`repair_time`,'%Y-%m-%d %H:%i:%s')repair_time,date_format(`create_time`,'%Y-%m-%d %H:%i:%s')create_time
    </sql>

    <!-- 插入记录 -->
    <insert id="add" parameterType="Object" >
        insert into lc_repair
        (id,process_no,repair_degree,receive_time,repair_time,create_time)
        values
        (#{id},#{processNo},#{repairDegree},#{receiveTime},#{repairTime},#{createTime})
    </insert>

    <!-- 根据id，修改记录-->
    <update id="update" parameterType="Object" >
        update lc_repair 
        set 
            id=#{id},
            process_no=#{processNo},
            repair_degree=#{repairDegree},
            receive_time=#{receiveTime},
            repair_time=#{repairTime},
            create_time=#{createTime}
        where id=#{id}
    </update>

    <!-- 删除记录 -->
    <delete id="delete" parameterType="Object">
        delete from lc_repair where id = #{id}
    </delete>
    
    <!-- 根据id查询  -->
    <select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
        select <include refid="Base_Column_List" />
        from lc_repair where id = #{id}
    </select>

    <!-- 查询列表无分页 -->
    <select id="queryList" resultMap="BaseResultMap"  parameterType="Object">
        select
        <include refid="Base_Column_List"/>
        from lc_repair
        where 1=1
        <if test="id != null and id != ''" >
            and id = #{id}
        </if>
        <if test="processNo != null and processNo != ''" >
            and process_no = #{processNo}
        </if>
        <if test="repairDegree != null and repairDegree != ''" >
            and repair_degree = #{repairDegree}
        </if>
        <if test="receiveTime != null and receiveTime != ''" >
            and receive_time = #{receiveTime}
        </if>
        <if test="repairTime != null and repairTime != ''" >
            and repair_time = #{repairTime}
        </if>
        <if test="createTime != null and createTime != ''" >
            and create_time = #{createTime}
        </if>
    </select>
    
    <!-- 查询列表 带分页 -->
    <select id="queryListForPage" resultMap="BaseResultMap"  parameterType="Object">
        select
        <include refid="Base_Column_List"/>
        from lc_repair
        where 1=1
        <if test="id != null and id != ''" >
            and id = #{id}
        </if>
        <if test="processNo != null and processNo != ''" >
            and process_no = #{processNo}
        </if>
        <if test="repairDegree != null and repairDegree != ''" >
            and repair_degree = #{repairDegree}
        </if>
        <if test="receiveTime != null and receiveTime != ''" >
            and receive_time = #{receiveTime}
        </if>
        <if test="repairTime != null and repairTime != ''" >
            and repair_time = #{repairTime}
        </if>
        <if test="createTime != null and createTime != ''" >
            and create_time = #{createTime}
        </if>
    </select>

</mapper>   