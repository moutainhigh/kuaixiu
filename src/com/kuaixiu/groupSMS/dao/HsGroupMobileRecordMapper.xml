<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kuaixiu.groupSMS.dao.HsGroupMobileRecordMapper" >
    <!-- Result Map-->
    <resultMap id="BaseResultMap" type="com.kuaixiu.groupSMS.entity.HsGroupMobileRecord" >
        <result column="id" property="id"/>
        <result column="mobile" property="mobile"/>
        <result column="coupon_id" property="couponId"/>
        <result column="coupon_code" property="couponCode"/>
        <result column="create_time" property="createTime"/>
        <result column="create_userid" property="createUserid"/>
    </resultMap>
    
    <!-- hs_group_mobile_record table all fields -->
    <sql id="Base_Column_List" >
        id,mobile,coupon_id,coupon_code,date_format(`create_time`,'%Y-%m-%d %H:%i:%s')create_time,create_userid
    </sql>

    <!-- 插入记录 -->
    <insert id="add" parameterType="Object" >
        insert into hs_group_mobile_record
        (id,mobile,coupon_id,coupon_code,create_time,create_userid)
        values
        (#{id},#{mobile},#{couponId},#{couponCode},#{createTime},#{createUserid})
    </insert>

    <!-- 根据id，修改记录-->
    <update id="update" parameterType="Object" >
        update hs_group_mobile_record 
        set 
            id=#{id},
            mobile=#{mobile},
            coupon_id=#{couponId},
            coupon_code=#{couponCode},
            create_time=#{createTime},
            create_userid=#{createUserid}
        where id=#{id}
    </update>

    <!-- 删除记录 -->
    <delete id="delete" parameterType="Object">
        delete from hs_group_mobile_record where id = #{id}
    </delete>
    
    <!-- 根据id查询  -->
    <select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
        select <include refid="Base_Column_List" />
        from hs_group_mobile_record where id = #{id}
    </select>

    <!-- 查询列表无分页 -->
    <select id="queryList" resultMap="BaseResultMap"  parameterType="Object">
        select
        <include refid="Base_Column_List"/>
        from hs_group_mobile_record
        where 1=1
        <if test="id != null and id != ''" >
            and id = #{id}
        </if>
        <if test="mobile != null and mobile != ''" >
            and mobile = #{mobile}
        </if>
        <if test="couponId != null and couponId != ''" >
            and coupon_id = #{couponId}
        </if>
        <if test="couponCode != null and couponCode != ''" >
            and coupon_code = #{couponCode}
        </if>
        <if test="createTime != null and createTime != ''" >
            and create_time = #{createTime}
        </if>
        <if test="createUserid != null and createUserid != ''" >
            and create_userid = #{createUserid}
        </if>
    </select>
    
    <!-- 查询列表 带分页 -->
    <select id="queryListForPage" resultMap="BaseResultMap"  parameterType="Object">
        select
        <include refid="Base_Column_List"/>
        from hs_group_mobile_record
        where 1=1
        <if test="id != null and id != ''" >
            and id = #{id}
        </if>
        <if test="mobile != null and mobile != ''" >
            and mobile = #{mobile}
        </if>
        <if test="couponId != null and couponId != ''" >
            and coupon_id = #{couponId}
        </if>
        <if test="couponCode != null and couponCode != ''" >
            and coupon_code = #{couponCode}
        </if>
        <if test="createTime != null and createTime != ''" >
            and create_time = #{createTime}
        </if>
        <if test="createUserid != null and createUserid != ''" >
            and create_userid = #{createUserid}
        </if>
    </select>

</mapper>   