<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kuaixiu.activity.dao.ActivityLoginMapper" >
    <!-- Result Map-->
    <resultMap id="BaseResultMap" type="com.kuaixiu.activity.entity.ActivityLogin" >
        <result column="id" property="id"/>
        <result column="openId" property="openId"/>
        <result column="activity_ident" property="activityIdent"/>
        <result column="brand_id" property="brandId"/>
        <result column="brand_name" property="brandName"/>
        <result column="product_id" property="productId"/>
        <result column="model_name" property="modelName"/>
        <result column="create_time" property="createTime"/>
        <result column="session_key" property="sessionKey"/>
    </resultMap>
    
    <!-- kx_activity_login table all fields -->
    <sql id="Base_Column_List" >
        id,openId,activity_ident,brand_id,brand_name,product_id,model_name,date_format(`create_time`,'%Y-%m-%d %H:%i:%s')create_time,session_key
    </sql>

    <!-- 插入记录 -->
    <insert id="add" parameterType="Object" >
        insert into kx_activity_login
        (id,openId,activity_ident,brand_id,brand_name,product_id,model_name,create_time,session_key)
        values
        (#{id},#{openId},#{activityIdent},#{brandId},#{brandName},#{productId},#{modelName},now(),#{sessionKey})
    </insert>

    <!-- 根据id，修改记录-->
    <update id="update" parameterType="Object" >
        update kx_activity_login 
        set 
            id=#{id},
            openId=#{openId},
            brand_id=#{brandId},
            brand_name=#{brandName},
            product_id=#{productId},
            model_name=#{modelName},
            create_time=#{createTime},
            session_key=#{sessionKey}
        where id=#{id}
    </update>

    <!-- 删除记录 -->
    <delete id="delete" parameterType="Object">
        delete from kx_activity_login where id = #{id}
    </delete>
    
    <!-- 根据id查询  -->
    <select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
        select <include refid="Base_Column_List" />
        from kx_activity_login where id = #{id}
    </select>
    <select id="queryByOpenId"  resultMap="BaseResultMap" parameterType="Object">
        select <include refid="Base_Column_List" />
        from kx_activity_login where openId=#{openId}
        order BY create_time DESC
    </select>
    <!-- 查询列表无分页 -->
    <select id="queryList" resultMap="BaseResultMap"  parameterType="Object">
        select
        <include refid="Base_Column_List"/>
        from kx_activity_login
        where 1=1
        <if test="id != null and id != ''" >
            and id = #{id}
        </if>
        <if test="openId != null and openId != ''" >
            and openId = #{openId}
        </if>
        <if test="brandId != null and brandId != ''" >
            and brand_id = #{brandId}
        </if>
        <if test="brandName != null and brandName != ''" >
            and brand_name = #{brandName}
        </if>
        <if test="productId != null and productId != ''" >
            and product_id = #{productId}
        </if>
        <if test="modelName != null and modelName != ''" >
            and model_name = #{modelName}
        </if>
        <if test="createTime != null and createTime != ''" >
            and create_time = #{createTime}
        </if>
        <if test="sessionKey != null and sessionKey != ''" >
            and session_key = #{sessionKey}
        </if>
    </select>
    
    <!-- 查询列表 带分页 -->
    <select id="queryListForPage" resultMap="BaseResultMap"  parameterType="Object">
        select
        <include refid="Base_Column_List"/>
        from kx_activity_login
        where 1=1
        <if test="id != null and id != ''" >
            and id = #{id}
        </if>
        <if test="openId != null and openId != ''" >
            and openId = #{openId}
        </if>
        <if test="brandId != null and brandId != ''" >
            and brand_id = #{brandId}
        </if>
        <if test="brandName != null and brandName != ''" >
            and brand_name = #{brandName}
        </if>
        <if test="productId != null and productId != ''" >
            and product_id = #{productId}
        </if>
        <if test="modelName != null and modelName != ''" >
            and model_name = #{modelName}
        </if>
        <if test="createTime != null and createTime != ''" >
            and create_time = #{createTime}
        </if>
        <if test="sessionKey != null and sessionKey != ''" >
            and session_key = #{sessionKey}
        </if>
    </select>

</mapper>   